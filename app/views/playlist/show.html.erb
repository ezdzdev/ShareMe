<%= render "shared/playlist_area" %>

<% if options[:display] == 'user' %>
  <div class="text-container">
    <div class="text-field-container">
      Your Link:  <%= text_field_tag :user, "localhost:9000/#{@playlist.user_hash}" ,:name =>"User Link", :readonly => true %>
    </div>
    <div class="text-field-container">
      Share Link: <%= text_field_tag :share, "localhost:9000/#{@playlist.share_hash}" ,:name =>"Share Link", :readonly => true %>
    </div>
  </div>
<% elsif options[:display] == 'share' %>
  BITCH
<% end %>
<%= stylesheet_link_tag 'playlist' %>
<%= javascript_include_tag 'playlist' %>

